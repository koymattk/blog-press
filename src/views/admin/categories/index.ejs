<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Categorias</h1>
        <a href="/categories/admin/new" class="btn btn-success">Criar nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>id</th>
                    <th>title</th>
                    <th>slug</th>
                    <th>ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.title %></td>
                        <td><%= category.slug %></td>
                        <td>
                            <a href="/categories/admin/edit/<%=category.id%>" class="btn btn-warning">Edit</a>
                            <form action="/categories/admin/delete/<%= category.id %>" method="POST" style="display: inline;"
                                onsubmit="confirmDelete(event, this)">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault()
        confirm("Você realmente deseja excluir essa categoria ?") ? form.submit() : console.log('deleção nao realizada')
    }
</script>