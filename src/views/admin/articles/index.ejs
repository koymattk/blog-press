<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Artigos</h1>
        <a href="/articles/admin/new" class="btn btn-success">Criar Um Novo Artigo</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>id</th>
                    <th>title</th>
                    <th>slug</th>
                    <th>categoria</th>
                    <th>ações</th>
                </tr>
            </thead>
            <tbody>
                <% article.forEach(article => { %>
                    <tr>
                        <th><%= article.id %></th>
                        <th><%= article.title %></th>
                        <th><%= article.slug %></th>
                        <th><%= article.category.title %></th>
                        <th>
                            <a href="/articles/admin/edit/<%=article.id%>" class="btn btn-warning">Edit</a>
                            <form action="/articles/admin/delete/<%= article.id %>" method="POST" style="display: inline;"
                                onsubmit="confirmDelete(event, this)">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </th>
                        
                    </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault()
        confirm("Você realmente deseja excluir esse Artigo ?") ? form.submit() : console.log('deleção nao realizada')
    }
</script>